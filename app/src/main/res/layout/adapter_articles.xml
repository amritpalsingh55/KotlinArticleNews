<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/const_main_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="@dimen/value_48dp"
        android:layout_height="@dimen/value_48dp"
        app:roundAsCircle="true"
        android:id="@+id/sdv_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="@dimen/value_0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:gravity="center"
        android:minHeight="@dimen/value_48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sdv_image"
        android:layout_marginEnd="@dimen/value_16dp"
        android:layout_marginStart="@dimen/value_8dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_0_7dp"
        android:layout_marginTop="@dimen/value_4dp"
        android:layout_marginBottom="@dimen/value_4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/light_black"
        />



</android.support.constraint.ConstraintLayout>